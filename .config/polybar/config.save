[bar/yuh]
        dpi = 100
        width = 100%
        height = 24

        background = #191919
        foreground = #FCFCFC

	font-0 = "unifont:pixelsize=10;1"

        modules-left = cpu memory xwindow
        modules-right = i3 pulseaudio date
        padding-left = 1
        padding-right = 1

        module-margin-left = 1

; ==============
; MODULES [LEFT]
; ==============

[module/cpu]
        type = internal/cpu
        interval = 2

        format = <label>
        label = CPU: %percentage%% |

[module/memory]
        type = internal/memory
        interval = 2

        format = <label>
        label = RAM: %percentage_used%% |

[module/xwindow]
        type = internal/xwindow

        format = <label>
        label = %title%
;
;
;

; ===============
; MODULES [RIGHT]
; ===============

[module/i3]
        type = internal/i3
        pin-workspaces = true
        strip-wsnumbers = true
        enable-click = true
        enable-scroll = true

[module/pulseaudio]
        type = internal/pulseaudio
        interval = 2

        format-volume = <label-volume>
        format-muted = <label-muted>
        label-volume = | VOL: %percentage%% |
        label-muted = | VOL: %percentage%% |

[module/date]
        type = internal/date

        date = %d.%m.%Y
        time = %H:%M

        format = <label>
        label = %date% | %time%
